@model PersonViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,500;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
</head>
<body>
    <h1>gokhan</h1>
    <form action="/home/search" method="get">
        <div style="margin:20px; margin-left:33%;width:33%;">
            <input type="text" placeholder="Kisi Ara" name="q" class="form-control" />
            <button type="submit" class="btn btn-danger">Ara</button>
        </div>
    </form>

    <div class="maincontainer">
        <div class="backgroundpurp">
            <h1>Örnek Form</h1>
            <h>Staj için kullanılacak</h>
        </div>
    </div>
    <br>
    <form method="post" asp-controller="Home" asp-action="Index">
        <div class="container">
            <p>
                Adı
                <br>
                <p1>string</p1>
            </p>
            <div class="inputs">
                <input asp-for="Name" placeholder="Yanıtınız" type="text" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <br>
        <div class="container">
            <p>
                Soyadı
                <br>
                <p1>string</p1>
            </p>
            <div class="inputs">
                <input asp-for="Surname" placeholder="Yanıtınız" type="text" class="form-control">
            </div>
        </div>
        <br>
        <div class="container">
            <p>
                Yaşı
                <br>
                <p1>string</p1>

            </p>
            <div class="inputs">
                <input asp-for="Age" placeholder="Yanıtınız" type="text">
            </div>
        </div>
        <br>
        <div class="container">
            <p>
                İşe Başlama Tarihi
                <br>
                <p1>date</p1>
            </p>
            <div class="inputs">
                <input asp-for="StartDate" placeholder="Yanıtınız"  type="text">
               
            </div>
        </div>

        <button style="margin-left:60%; margin-top:50px" type="submit" class="btn btn-primary">Gönder</button>
        <a class="btn btn-primary" style="margin-left:60%" href="/home/Kisiler">Kisiler</a>
    </form>
    
</body>
</html>